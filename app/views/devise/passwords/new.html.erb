<div class='container'>
  <div class='row'>
    <h3 class='text-center'>Forgot your password?</h3>
    <div class='col-md-offset-3 col-md-6 well'>
      <%= form_for(resource, as: resource_name, url: password_url(resource_name), html: { method: :post, role: 'form', class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <p class='text-center'>We'll send password reset instructions.</p>

        <div class='form-group'>
          <%= f.label :email, class: 'control-label col-sm-2' %>
          <div class='col-sm-10'>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-6'>
            <button class='btn btn-primary btn-lg btn-block' type='submit'>
              Reset Password
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
