<div class='container'>
  <div class='row'>
    <h3 class='text-center'>Change your password</h3>
    <div class='col-md-offset-2 col-md-8 well'>
      <%= form_for(resource, as: resource_name, url: password_url(resource_name), html: { method: :put, role: 'form', class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.hidden_field :reset_password_token %>
        <div class='form-group'>
          <%= f.label :password, class: 'control-label col-sm-3' %>
          <div class='col-sm-9'>
            <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :password_confirmation, class: 'control-label col-sm-3' %>
          <div class='col-sm-9'>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-offset-3 col-sm-3'>
            <button class='btn btn-primary btn-lg btn-block' type='submit'>
              Change
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
