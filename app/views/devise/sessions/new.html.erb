<div class='container'>
  <div class='row'>
    <h3 class='text-center'>Sign in</h3>
    <div class='col-md-offset-3 col-md-6 well'>
      <%= form_for(resource, as: resource_name, url: session_url(resource_name), html: { role: 'form', class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <div class='form-group'>
          <%= f.label :email, class: 'control-label col-sm-2' %>
          <div class='col-sm-10'>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :password, class: 'control-label col-sm-2' %>
          <div class='col-sm-10'>
            <%= f.password_field :password, class: 'form-control' %>
          <%- if devise_mapping.recoverable? %>
            <%= link_to 'Forgot password?', new_password_url(resource_name), class: 'pull-right' %>
          <% end -%>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class='form-group'>
            <div class='col-sm-offset-2 col-sm-10'>
              <div class='checkbox'>
                <label>
                  <%= f.check_box :remember_me, class: 'control-label col-sm-2' %> Remember me?
                </label>
              </div>
            </div>
          </div>
        <% end -%>

        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-3'>
            <button class='btn btn-primary btn-lg btn-block' type='submit'>
              Sign in
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
