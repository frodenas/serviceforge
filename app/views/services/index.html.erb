<div class='container'>
  <div class='row'>
    <% @services.each do |service| %>
        <div class='col-md-4'>
          <div class='panel panel-default'>
            <div class='panel-heading' style='height:100px'>
              <div class='panel-title'>
                <div class='media'>
                  <span class='pull-left'><%= image_tag service.image.url(:thumbnail) %></span>
                  <div class='media-body'>
                    <h4 class='media-heading'>
                      <a href="<%= service_url(service) %>"><%= service.display_name.blank? ? service.name : service.display_name %></a>
                    </h4>
                    <p><small><%= truncate(service.description, length: 60) %></small></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <% if policy(Service).new? %>
        <div class='col-md-4'>
          <div class='panel panel-default'>
            <div class='panel-heading' style='height:100px'>
              <div class='panel-title text-center'>
                <button type='button' class='btn btn-default btn-lg'>
                  <%= link_to new_service_url do %>
                      <span class='glyphicon glyphicon-plus'></span>
                  <% end %>
                </button>
              </div>
              <div class='panel-body text-center'>
                <small>Add a new service</small>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
