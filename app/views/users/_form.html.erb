<div class='well'>
  <%= form_for(@user, html: { role: 'form', class: 'form-horizontal' }) do |f| %>
    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h3><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='form-group'>
      <%= f.label :first_name, class: 'control-label col-sm-2' %>
      <div class='col-sm-10'>
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :last_name, class: 'control-label col-sm-2' %>
      <div class='col-sm-10'>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :email, class: 'control-label col-sm-2' %>
      <div class='col-sm-10'>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :public, class: 'control-label col-sm-2' %>
      <div class='col-sm-10'>
        <div class='checkbox'>
          <label>
            <%= f.check_box :public %>
            Uncheck if you do not want your user to appear on searches.
           </label>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :role, class: 'control-label col-sm-2' %>
      <div class='col-sm-10'>
        <div class='radio'>
          <label>
            <%= f.radio_button :role, User.roles[:regular] %>
            <strong>Regular</strong>: this user will have the default role
          </label>
        </div>
        <div class='radio'>
          <label>
            <%= f.radio_button :role, User.roles[:admin] %>
            <strong>Admin</strong>: this user will be able to administer all resources
          </label>
        </div>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-2'>
        <%= f.submit class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>
