<% if user_signed_in? %>
  <li class='dropdown'>
    <a href='#' class='dropdown-toggle' data-toggle='dropdown' id='dropdownUserMenu' >
      <%= gravatar_image_tag(current_user.email, class: 'img-circle pull-left', alt: "#{current_user.first_name} #{current_user.last_name}") %>
      &nbsp;<%= current_user.first_name %>
      <span class='caret'></span>
    </a>
    <ul class='dropdown-menu' role='menu' aria-labelledby='dropdownUserMenu'>
      <li role='presentation'><%= link_to 'Edit Profile', edit_user_registration_url, role: 'menuitem', tabindex: '-1' %></li>
      <li role='presentation'><%= link_to 'My Teams', teams_url, role: 'menuitem', tabindex: '-1' %></li>
      <li role="presentation"><%= link_to 'Log Out', destroy_user_session_url, method: 'delete', role: 'menuitem', tabindex: '-1' %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Sign in', new_user_session_url %></li>
  <li><%= link_to 'Sign up', new_user_registration_url %></li>
<% end %>
